<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/openClientSocket"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="已打开socket客户端"/>

        <TextView
            android:id="@+id/clientSocketConnect"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="已连上socket服务端"/>

        <TextView
            android:id="@+id/severSocketSendNumber"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="服务端主动向客户端请求次数:0"/>

        <TextView
            android:id="@+id/serverSocketSendInfo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="服务端主动向客户端发送的消息:"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>